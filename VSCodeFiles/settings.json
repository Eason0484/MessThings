{
    "security.workspace.trust.enabled": false,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}",
    "files.trimTrailingWhitespace": true,
    "git.path": "D:\\Program Files\\Git\\bin\\git.exe", //注意
    "files.autoGuessEncoding": true,
    "update.enableWindowsBackgroundUpdates": true,
    "debug.onTaskErrors": "abort",
    "git.enabled": true,
    // 编辑器设置
    "editor.bracketPairColorization.enabled": true, // 括号对着色
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
    }, // 自动补全
    "editor.formatOnSave": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?·～！￥…（）—【】、；：‘’“”，。《》？ ",
    "editor.minimap.maxColumn": 100,
    "editor.fontSize": 20,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "all",
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    // window
    "window.zoomLevel": 0,
    // 文件资源管理
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // 终端
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    // 文件
    "files.insertFinalNewline": true,
    "files.eol": "\n",
    "files.associations": {
        "*.cpp": "cpp",
        "*.c": "c"
    },
    //工作区设置
    "workbench.editor.untitled.hint": "hidden",
    "workbench.sideBar.location": "left",
    "workbench.iconTheme": "material-icon-theme", //文件图标主题：material-icon-theme，需下载
    "workbench.colorTheme": "One Dark Pro", //颜色主题（深）：One Dark Pro，需下载
    "workbench.startupEditor": "none", //启动时显示欢迎页
    //以上为工作区设置
    "git.confirmSync": false,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "git.enableSmartCommit": true,
    "editor.fontFamily": "Consolas",
    "scm.inputFontFamily": "Consolas",
    "debug.console.fontFamily": "Consolas",
    "terminal.integrated.fontFamily": "Consolas",
    "editor.inlayHints.fontFamily": "Consolas",
    "editor.codeLensFontFamily": "Consolas",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "C:/Users/10836/.vimrc", // 注意此处为.vimrc文件的路径
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one", // Markdown默认格式化程序
        // 快速补全
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        },
        // 显示空格
        "editor.renderWhitespace": "all",
        // snippet 提示优先（看个人喜欢）
        "editor.snippetSuggestions": "top",
        "editor.tabCompletion": "on",
        // 使用enter 接受提示
        "editor.acceptSuggestionOnEnter": "on"
    },
    "markdown-preview-enhanced.previewTheme": "github-dark.css", // MPE: Markdown预览样式
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features" // 默认json文件格式化程序
    },
    "git.openRepositoryInParentFolders": "always"
}
