{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++", //与launch.json的preLaunchTask一致
            "command": "D:/MinGW-w64/bin/g++.exe", //注意
            "args": [
                "-g",
                "-Wall",
                "${file}", //工作目录下可以在任意位置存放cpp文件，最好在工作目录下设一个单独的文件夹src
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe", //工作目录下要有存放输入输出文件、编译文件的文件夹build
                "-std=c++17", //c++标准
                "-finput-charset=UTF-8", //编译器默认文件编码
                "-fexec-charset=GB18030",
                "-I",
                "${workspaceFolder}\\include" //工作目录下要有存放头文件的文件夹include
            ],
            "options": {
                "cwd": "D:/MinGW-w64/bin" //注意
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
